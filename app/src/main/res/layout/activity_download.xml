<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.jetpack.master.downloadManager.DownloadViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.commonsware.jetpack.work.download.MainActivity">

        <Button
            android:id="@+id/download"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/download_btn_title"
            android:onClick="@{() -> viewModel.doDownload()}"
            android:enabled="@{viewModel.liveWorkStatus }"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
